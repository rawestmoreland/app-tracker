{
  "private": true,
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "deploy": "npm run -w apps/api deploy",
    "build": "turbo run build",
    "db:migrate:deploy": "npm run -w database db:migrate:deploy",
    "db:migrate:dev": "npm run -w database db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prisma": "latest",
    "tsx": "4.19.1",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "with-prisma",
  "dependencies": {
    "@prisma/client": "latest",
    "prisma-json-types-generator": "^3.5.2"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
